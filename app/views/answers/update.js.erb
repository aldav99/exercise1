<% if @answer.errors.present? %>
  $('.answer-update-errors').html('<%= j render 'shared/errors', resource: @answer %>');
  setTimeout("$('.answer-update-errors ul').remove();", 3000);
<% else %>
  $(".notice").html("<%=j flash[:notice] %>");
  $('<%= ".update-#{@answer.id}" %>').text('<%= @answer.body %>');
  $('<%= "tbody#answer_attachments-#{@answer.id}" %>').html('<%= j render @answer.attachments %>');
  $('<%= "form#edit-answer-#{@answer.id}"%>').hide();
  $('.edit-answer-link').show();
<% end %>


